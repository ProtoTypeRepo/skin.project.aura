    <include name="View_List_ItemLayout">
        <control type="group">
            <left>10</left>
            <right>10</right>
            <control type="group">
                <control type="group">
                    <visible>!Window.IsVisible(MyPVRChannels.xml)</visible>
                    <!-- Overlay Indicator -->
                    <control type="image">
                        <centertop>50%</centertop>
                        <left>30</left>
                        <width>32</width>
                        <height>32</height>
                        <texture colordiffuse="main_fg_70">$VAR[Image_Overlay_List]</texture>
                        <visible>!String.IsEmpty(ListItem.Overlay)</visible>
                        <visible>!ListItem.IsPlaying + !ListItem.IsSelected</visible>
                    </control>
                    <!-- Fallback Icon -->
                    <control type="image">
                        <centertop>50%</centertop>
                        <left>16</left>
                        <width>64</width>
                        <height>64</height>
                        <texture colordiffuse="main_fg_70" fallback="DefaultFolder.png">$VAR[Image_FallbackIcon]</texture>
                        <visible>String.IsEmpty(ListItem.Overlay)</visible>
                        <visible>!ListItem.IsPlaying + !ListItem.IsSelected</visible>
                    </control>
                    <!-- Playling -->
                    <control type="image">
                        <centertop>50%</centertop>
                        <left>30</left>
                        <width>40</width>
                        <height>40</height>
                        <texture colordiffuse="$VAR[ColorHighlight]" fallback="DefaultFolder.png">indicator/playwhite.png</texture>
                        <visible>ListItem.IsPlaying | ListItem.IsSelected</visible>
                    </control>
                    <!-- HDSD Flag -->
                    <control type="image">
                        <centertop>51%</centertop>
                        <left>90</left>
                        <width>37</width>
                        <height>24</height>
                        <texture colordiffuse="main_fg_70">$VAR[Image_HDSD]</texture>
                        <visible>Container.Content(movies) | Container.Content(episodes)</visible>
                        <animation effect="slide" end="8" condition="String.IsEmpty(ListItem.Overlay)">Conditional</animation>
                        <visible>!ListItem.IsParentFolder</visible>
                    </control>
                    <!-- Year Label -->
                    <control type="label">
                        <left>156</left>
                        <width>80</width>
                        <height>100%</height>
                        <aligny>center</aligny>
                        <textcolor>main_fg_30</textcolor>
                        <font>font_small</font>
                        <label>$INFO[ListItem.Year]</label>
                        <animation effect="slide" end="-70" condition="!Container.Content(movies) + !Container.Content(episodes)">Conditional</animation>
